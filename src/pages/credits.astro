---
import Layout from "@src/layouts/Layout.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Link from "@src/components/Link.astro";

import Remix from "@logos/remix_icon.svg";
import Embed from "@logos/astro-embed.svg";

import Martin from "@people/martin_trapp.png";
import Coding from "@people/coding_in_public.png";
import Rishi from "@people/rishi_raj_jain.jpg";
import Kevin from "@people/kevin_powell.jpg";
import Talon from "@people/talon_nicholson.png";
import Null from "@people/person_null.png";
import Signature from "@components/Signature.astro";
---

<Layout title="Credits" description="All service providers and people involved in the creation of ncp.dev, taking it from imagination to reality for all to enjoy." image="credits.png">
	<div id="credits-section">
		<h1 id="credits-header">Credits</h1>
		<div id="credits-grid">
			<div class="credits-section">
				<h2 class="section-header">Infrastructure & Services</h2>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/vercel" width={48} height={48} />
					<p class="contributor-name"><Link text="Vercel" href="https://www.vercel.com/home" /> • Hosting & Deployment</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/spaceship" width={48} height={48} />
					<p class="contributor-name"><Link text="Spaceship" href="https://www.spaceship.com/"/> • Domain & DNS Services</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/github" width={48} height={48} />
					<p class="contributor-name"><Link text="GitHub" href="https://github.com/features" /> • Version Control & Deployment</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/resend" width={48} height={48} />
					<p class="contributor-name"><Link text="Resend" href="https://www.resend.com/" /> • E-mail Communications</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/google" width={48} height={48} />
					<p class="contributor-name"><Link text="Google" href="https://developers.google.com/gmail/imap/imap-smtp" /> • SMTP Server</p>
				</div>
				<div class="contributor">
					<Image class="contributor-logo" src={Remix} alt="Remix Icon's Logo" width={48} height={48} />
					<p class="contributor-name"><Link text="Remix Icon" href="https://remixicon.com/" /> • SVG Icon Provider</p>
				</div>		
			</div>
			<div class="credits-section">
				<h2 class="section-header">Astro</h2>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/astro" width={48} height={48} />
					<p class="contributor-name"><Link text="Astro" href="https://www.astro.build/" /> • Web Framework</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/bot" width={48} height={48} />
					<p class="contributor-name"><Link text="astro-vtbot" href="https://www.github.com/martrapp/astro-vtbot" /> • View Transitions</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/astro" width={48} height={48} />
					<p class="contributor-name"><Link text="astro-icon" href="https://www.github.com/natemoo-re/astro-icon" /> • SVG Iconized Component</p>
				</div>
				<div class="contributor">
					<Icon class="contributor-logo" name="logos/astro" width={48} height={48} />
					<p class="contributor-name"><Link text="astro-font" href="https://www.github.com/rishi-raj-jain/astro-font" /> • Font Handler</p>
				</div>
				<div class="contributor">
					<Image class="contributor-logo" src={Embed} alt="Embed Logo" width={48} height={48} />
					<p class="contributor-name"><Link text="astro-embed" href="https://github.com/delucis/astro-embed" /> • Embed Optimizer</p>
				</div>				
			</div>
			<div class="credits-section">
				<h2 class="section-header">Notable Contributors</h2>
				<div class="contributor">
					<Image class="contributor-person" src={Martin} alt="Martin Trapp" width={48} height={48} loading="eager" />
					<p class="contributor-name"><Link text="Martin Trapp" href="https://www.github.com/martrapp" /> • View Transition God</p>
				</div>
				<div class="contributor">
					<Image class="contributor-person" src={Coding} alt="Coding in Public" width={48} height={48} loading="eager" />
					<p class="contributor-name"><Link text="Coding in Public" href="https://www.youtube.com/@CodinginPublic" /> • Resend Teacher</p>
				</div>
				<div class="contributor">
					<Image class="contributor-person" src={Kevin} alt="Kevin Powell" width={48} height={48} loading="eager" />
					<p class="contributor-name"><Link text="Kevin Powell" href="https://www.youtube.com/kevinpowell" /> • Grid Teacher</p>
				</div>
				<div class="contributor">
					<Image class="contributor-person" src={Rishi} alt="Rishi Raj Jain" width={48} height={48} loading="lazy" />
					<p class="contributor-name"><Link text="Rishi Raj Jain" href="https://www.github.com/rishi-raj-jain" /> • Layout Shift Debugger</p>
				</div>
				<div class="contributor">
					<Image class="contributor-person" src={Talon} alt="Talon Nicholson" width={48} height={48} loading="lazy" />
					<p class="contributor-name"><Link text="Talon Nicholson" href="https://www.talon.fyi" /> • Quailty Assurance</p>
				</div>
			</div>
			<div class="credits-section">
				<h2 class="section-header">GitHub Sponsors</h2>
				<div class="contributor">
					<Image class="contributor-person" src={Null} alt="Null Person" width={48} height={48} loading="eager" />
					<p class="contributor-name">None • <Link text="Become the first!" href="https://github.com/sponsors/KingPr0o7?frequency=recurring&sponsor=KingPr0o7" /></p>
				</div>			
			</div>
			<p id="personal-pledge">I want to <b>thank you</b> for just visiting my site, and <i>especially this page</i>! Each person and provider above are a key part in the existence of ncp.dev, and without these people this site would cease to exist in the form it is in now. I'm just a kid, chasing his dreams of becoming a software developer, and visiting, sharing, and experiencing my creation is something I cherish the most. I also want to thank my <b>loving parents</b>, teachers, mentors, Astro community members, and the various amounts of YouTubers and Twitch streamers that build and expand the technology communities. All GitHub Sponsor donations go directly to funding said dream to aid the stress of college funding for me and my parents. Again, thank you anonymous viewer for visiting my creation, and I'll do my best to make more creations like this <b>for all</b>.</p>
			<Signature padding={0} />
		</div>
	</div>
</Layout>
<style>
	#credits-section {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 75px;
	}
	
		#credits-header {
			font-size: clamp(3rem, 5vw, 7rem);
			text-transform: uppercase;
			padding: 50px;
			text-align: center;
			width: 100%;
		}

			#credits-header::after {
				content: " ";
				display: block;
				width: 100%;
				height: 2px;
				background: radial-gradient(50% 100% at 50% 100%, var(--gray) 0%, var(--background) 100%);
				margin-top: 12.5px;
			}

		#credits-grid {
			width: 100%;
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			margin: 0 auto;
			text-align: center;
			grid-gap: 75px 12.5px;
			place-items: center;
		}

			.credits-section {
				display: flex;
				flex-direction: column;
				text-align: left;
				gap: 25px;
				height: 100%;
				/* margin-bottom: 75px; */
				max-width: 600px; /* Maximum width */
				width: 100%; /* Make width responsive */
			}

				.section-header {
					font-size: clamp(1.2rem, 1.9vw, 2rem);
				}

					.section-header::after {
						content: " ";
						display: block;
						width: 100%;
						height: 2px;
						background: radial-gradient(100% 100% at 0% 100%, var(--gray) 0%, var(--background) 100%);
						margin-top: 12.5px;
					}

				.contributor {
					display: flex;
					align-items: center;
					gap: 12.5px;
				}

					.contributor-logo, .contributor-person {
						width: 48px;
						height: 48px;
					}

						.contributor-person { border-radius: 50%; }
					
					.contributor-name { font-size: clamp(1rem, 1.8vw, 1.5rem); }

	#personal-pledge {
		font-size: clamp(1rem, 1.8vw, 1.5rem);
		max-width: 1400px;
		grid-column: 1 / 3;
		text-align: left;
		width: 100%;
		padding: 25px;
		line-height: 2rem;
	}

@media (max-width: 1300px) {
	#credits-grid {width: 100%; }
	.credits-section { max-width: fit-content; }
}

@media (max-width: 1000px) {
	#credits-header { padding: 12.5px; }

		#credits-grid {
			display: flex;
			flex-direction: column;
		}

			#credits-section { gap: 25px; }

				#personal-pledge { padding: 12.5px; }
}

</style>