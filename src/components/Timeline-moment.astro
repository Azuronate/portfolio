---

interface Props {
	date: string;
}

const { date } = Astro.props;

---


<button class="moment" id=`moment-year-${date}`>
	<div class="moment-year">
		<p>{date}</p>
		<div class="moment-circle"></div>
	</div>
</button>
<style>
	.moment {
		background: none;
		outline: none;
		border: none;
		cursor: pointer;
		height: 64px;
		width: 64px;
	}

	.moment-year {
		height: 100%;
		display: flex;
		flex-direction: column;
		gap: 10px;
		align-items: center;
		font-size: 1.5rem;
		font-weight: bold;
	}

		.moment-circle {
			position: relative;
			width: 16px;
			height: 16px;
			outline-offset: 4px;
			outline: 2px solid var(--gray);
			border-radius: 50%;
		}	

			.moment-circle::before {
    			content: "";
    			position: absolute;
    			top: 0;
    			left: 0;
    			width: 100%;
    			height: 100%;
    			border-radius: 50%;
    			background-color: var(--accent);
    			transform: scale(0);
    			transition: transform 700ms;
			}		

				.moment-active .moment-circle::before { transform: scale(1); }

@keyframes grow-circle {
    0% {
        transform: scale(0);
    }
    100% {
        transform: scale(1);
    }
}	
</style>