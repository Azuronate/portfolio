---
interface Props {
	type: string;
	title: string;
	date: string;
	description: string;
}

const { type, title, date, description } = Astro.props;
import { Icon } from 'astro-icon/components'
---

<div class=`note ${type}`>
	<Icon class="icon" name={type} />
	<div class="note-info">
		<h2 class="note-header">{title} â€¢ {date}</h2>
		<p class="note-description">{description}</p>
	</div>
</div>

<style>
	.note {
		display: flex;
		width: 100%;
		height: fit-content;
		align-items: center;
		padding: 25px;
		gap: 25px;
		border-left: 5px solid var(--accent);
		border-radius: var(--secondary-border-radius);
		background: var(--gray);
	}

		.warning {
			border-left-color: var(--warning);
		}

		.icon {
			width: 50px;
			height: 50px;
		}

		.note-info {
			display: flex;
			flex-direction: column;
			gap: 12.5px;
		}

			.note-header {
				font-size: clamp(1rem, 2vw, 2rem);
			}

			.note-description {
				font-size: clamp(0.9rem, 2vw, 1.5rem);
				line-height: 2rem;
				font-weight: 400;
			}
</style>