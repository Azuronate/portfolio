---
interface Props {
	link: string,
	text: string,
	image: string,
}

const { link, text, image } = Astro.props
---

<div id="download-wrapper">
	<div id="download">
		<img id="download-image" src={image} alt={text} width={950} height={400} />
		<div id="download-content">
			<a id="download-link" href={link} download>Download</a>
		</div>
	</div>
</div>
<style>
	#download-wrapper {
		display: flex;
		align-items: center;
		flex-direction: column;
		width: 100%;
	}

		#download {
			outline: 2px solid var(--gray);
			border-radius: var(--secondary-border-radius);
		}

			#download-image { 
				max-width: 100%; 
				height: auto;
			}

			#download-content {
				width: 100%;
				text-align: center;
				background-color: var(--primary);
				padding: 25px;
				border-radius: 0 0 var(--secondary-border-radius) var(--secondary-border-radius);
			}

				#download-link {
					font-size: clamp(1rem, 1.5vw, 2rem);
					font-weight: bold;
					color: var(--text);
					text-decoration: none;
				}

@media (max-width: 700px) {
	#download-content { padding: 12.5px 0; }
}
</style>
