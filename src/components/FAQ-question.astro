---
interface Props {
  question: string;
}

const { question } = Astro.props;

import { Image } from "astro:assets";
import Arrow from '@icons/arrow.svg';
---

<div class="question">
	<button class="question-toggle">
	  {question}
	  <Image src={Arrow} class="question-arrow" alt="Dropdown arrow for answer" width={32} height={32}/>
	</button>
	<div class="answer">
		<slot name="answer" />
	</div>
</div>