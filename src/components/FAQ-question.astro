---
interface Props {
  question: string;
}

const { question } = Astro.props;

import { Icon } from 'astro-icon/components';
---

<div class="question">
	<button class="question-toggle">
	  {question}
	  <Icon name="symbols/arrow" class="question-arrow" width={32} height={32}/>
	</button>
	<div class="answer">
		<slot name="answer" />
	</div>
</div>